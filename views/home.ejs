<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/css/views.css" />
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <title>Document</title>
  </head>
  <body>
    <div style="text-align: center">
      <h1>Face Conference Dashboard</h1>
    </div>
    <div id="dash-choices">
      <div id="room-name">
        <div style="margin-right: 10rem">
          <h2>Create a new room</h2>
          <form
            id="roomNameFormId"
            name="roomNameForm"
            onsubmit="event.preventDefault(); roomSubmitHandler();"
          >
            <div>
              <label for="roomName">Room Name</label>
            </div>
            <div id="inputRoom" class="form-group">
              <input
                type="text"
                name="roomName"
                placeholder="Name your room"
                required
                class="form-control"
              />
              <button
                id="new-room-btn"
                type="submit"
                value="Submit"
                class="btn btn-primary"
              >
                Create New Room
              </button>
            </div>
          </form>
        </div>
      </div>
      <div id="ex-room-name">
        <h2>Join an existing room</h2>
        <ul id="room-list"></ul>
      </div>
    </div>
    <!-- <a style="color: white; text-decoration: none" href="/new-room"
      ><button class="btn-primary">create new room</button></a
    > -->
  </body>
</html>
